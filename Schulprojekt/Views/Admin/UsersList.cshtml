@using Schulprojekt.Models.ViewModels
@model List<AdminUserViewModel>

<h2>Benutzerverwaltung</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Rollen</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditUserRoles" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Rollen ändern</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>