@using Schulprojekt.Models.ViewModels
@model List<AdminUserViewModel>

<h2>Benutzerverwaltung</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Rollen</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form asp-action="UpdateUserRole" method="post" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="selectedRole" class="form-select form-select-sm d-inline w-auto">
                            <option value="Admin" selected="@user.Roles.Contains("Admin")">Admin</option>
                            <option value="Customer" selected="@user.Roles.Contains("Customer")">Customer</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-outline-success ms-2">Speichern</button>
                    </form>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>