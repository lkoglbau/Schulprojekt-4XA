@model Order

<h2>Bestelldetails – Nr. @Model.Id</h2>

<div class="mb-3">
    <strong>Kunde:</strong> @Model.User?.Email<br />
    <strong>Datum:</strong> @Model.OrderDate.ToString("dd.MM.yyyy")<br />
    <strong>Status:</strong> @Model.Status<br />
    <strong>Gesamtbetrag:</strong> @Model.TotalAmount.ToString("C")
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Menge</th>
            <th>Einzelpreis</th>
            <th>Gesamt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.Quantity * item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="OrderList" class="btn btn-dark">Zurück zur Übersicht</a>