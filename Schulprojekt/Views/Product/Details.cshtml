@model Schulprojekt.Models.Product

@{
    ViewData["Title"] = "Product Details";
}


<style>
        .card{
            border-radius: 16px;
        }
</style>

<body>
       <div class="card shadow-lg p-4 mb-3">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center justify-content-center">
                    <img src="~/images/@Model.ImageName" style="width: 300px; height: auto" class="card-img-top" alt="@Model.Name" />
                </div>
                <div class="col-md-6">
                    <h2>@Model.Name</h2>
                    <h4>@Model.Price.ToString("C")</h4>
                    <p>@Model.Description</p>
                    <p><strong>Kategorie:</strong> @Model.Category?.Name</p>
                    <form asp-controller="Cart" asp-action="Add" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-lg">In den Warenkorb</button>
                    </form>
                </div>
            </div>
       </div>
 

        <hr />

        <h4 class="mt-5">Bewerte dieses Produkt</h4>

        <div class="RankingContainer">
            <form asp-action="AddReview" method="post" class="card shadow-lg p-4 mb-3">
                <input type="hidden" name="productId" value="@Model.Id" />

                <div class="mb-3">
                    <select name="rating" class="form-select w-auto" required>
                        <option value="5">★★★★★ (Sehr gut)</option>
                        <option value="4">★★★★☆ (Gut)</option>
                        <option value="3">★★★☆☆ (Okay)</option>
                        <option value="2">★★☆☆☆ (Schwach)</option>
                        <option value="1">★☆☆☆☆ (Sehr schlecht)</option>
                    </select>
                </div>
                <div class="mb-3">
                    <textarea name="comment" class="form-control" rows="3" placeholder="Hinterlasse einen Kommentar..." required></textarea>
                </div>

                <button type="submit" class="btn btn-dark">Absenden</button>
            </form>
        </div>
        @if (TempData["SuccessMessage"] != null)
            {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            }

        <hr />

        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAd))
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>@review.User?.UserName</strong>
                                <small class="text-muted"> – @review.CreatedAd.ToShortDateString()</small>
                            </div>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <span class="text-warning">&#9733;</span> <!-- gefüllter Stern -->
                                    }
                                    else
                                    {
                                        <span class="text-secondary">&#9734;</span> <!-- leerer Stern -->
                                    }
                                }
                            </div>
                        </div>
                        <p class="mt-2">@review.Comment</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted fst-italic">Noch keine Bewertungen vorhanden.</p>
        }
</body>



